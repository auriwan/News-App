                android:id="@+id/rv_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_business"
                tools:itemCount="5"
                tools:listitem="@layout/item_everything" />
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmer_business"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_business"
                android:layout_width="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content">
                <include layout="@layout/shimmer_everything"/>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <ImageView
                android:id="@+id/image_error_business"
                android:layout_width="180dp"
                android:layout_height="200dp"
                android:layout_marginStart="20dp"
                android:visibility="gone"
                android:layout_marginEnd="20dp"
                android:padding="30dp"
                android:src="@drawable/image_error"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_business"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

