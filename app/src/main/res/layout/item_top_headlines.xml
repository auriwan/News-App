<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/item_bg"
    style="@style/BackgroundItem"
    app:elevation="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/image_top_headline"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:background="@drawable/content_bg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:clipToOutline="true"
            tools:src="@tools:sample/avatars"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/item_top_headlines"
            tools:targetApi="s"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_title_top_headlines"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:maxLines="2"
        style="@style/FontColor"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toTopOf="@id/card_image"
        app:layout_constraintStart_toEndOf="@id/card_image"
        app:layout_constraintBottom_toTopOf="@id/tv_source_name"/>
    <TextView
        android:id="@+id/tv_source_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_light"
        style="@style/FontColor"
        android:text="@string/source"
        app:layout_constraintTop_toBottomOf="@id/tv_title_top_headlines"
        app:layout_constraintStart_toStartOf="@id/tv_title_top_headlines"
        app:layout_constraintBottom_toTopOf="@id/tv_date_news"/>

    <TextView
        android:id="@+id/tv_date_news"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        style="@style/FontColor"
        app:layout_constraintTop_toBottomOf="@id/tv_source_name"
        app:layout_constraintStart_toStartOf="@id/tv_source_name"
        app:layout_constraintBottom_toBottomOf="@id/card_image"/>

</androidx.constraintlayout.widget.ConstraintLayout>